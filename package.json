{
    "name": "template-repository",
    "version": "1.0.0",
    "description": "My template repo which i use as the starting template for my projects",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "webpack --config webpack.prod.js",
        "start": "webpack serve --config webpack.dev.js",
        "takeChangesToGhPages": "git checkout gh-pages && git merge main --no-edit",
        "addAndCommitToGhPages": "git add dist -f && git commit -m 'Deployment commit'",
        "predeployToGhPages": "npm run takeChangesToGhPages && npm run build && npm run addAndCommitToGhPages",
        "deployToGhPages": "git subtree push --prefix dist origin gh-pages",
        "postdeployToGhPages": "git checkout main"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/devritra/Template-Repository.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/devritra/Template-Repository/issues"
    },
    "homepage": "https://github.com/devritra/Template-Repository#readme",
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "css-loader": "^7.1.2",
        "eslint": "^9.39.1",
        "globals": "^16.5.0",
        "html-webpack-plugin": "^5.6.4",
        "prettier": "3.6.2",
        "style-loader": "^4.0.0",
        "webpack": "^5.102.1",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2",
        "webpack-merge": "^6.0.1"
    }
}
